{
    "manifest_version": 2,
    "name": "Global Aliexpress",
    "description": "Redirects the Russian localized Aliexpress links to the global (english) version",
    "version": "2.0",
    "homepage_url": "https://github.com/IlyaEG/GlobalAliexpress",

    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "*://aliexpress.ru/*",
        "*://*.aliexpress.ru/*",
        "*://*.aliexpress.com/*",
        "*://aliexpress.com/*",
        "*://*.mmstat.com/*",
        "*://mmstat.com/*"
    ],

    "background": {
        "scripts": ["redirect.js"]
    }

}
