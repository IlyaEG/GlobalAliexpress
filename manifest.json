{
    "manifest_version": 2,
    "name": "Global Aliexpress",
    "description": "Redirects the Russian localized Aliexpress links to the global (english) version",
    "version": "1.0",
    "homepage_url": "https://github.com/IlyaEG/GlobalAliexpress",

    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "https://aliexpress.ru/*",
        "https://*.aliexpress.ru/*",
        "https://ru.aliexpress.com/*",
        "https://www.aliexpress.com/ru/*"
    ],

    "background": {
        "scripts": ["redirect.js"]
    }

}
